# Tau environment baseline
# Copy to a local .env file and set only the variables you actually need.
# Do not commit real secrets.

# -----------------------------------------------------------------------------
# Provider + model
# -----------------------------------------------------------------------------
# Provider/model defaults used by tau-coding-agent and gateway flows.
TAU_PROVIDER=openai
TAU_MODEL=gpt-5-mini

# Generic provider endpoint/key override used by provider adapters.
TAU_API_BASE=
TAU_API_KEY=

# Provider-native keys (optional; depends on selected auth mode/provider).
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Optional ordered fallback chain ("provider/model"), repeatable in CLI.
TAU_FALLBACK_MODEL=

# -----------------------------------------------------------------------------
# Agent/runtime limits
# -----------------------------------------------------------------------------
TAU_MAX_TURNS=30
TAU_AGENT_MAX_CONTEXT_MESSAGES=64
TAU_AGENT_MAX_PARALLEL_TOOL_CALLS=4

# -----------------------------------------------------------------------------
# Memory runtime
# -----------------------------------------------------------------------------
TAU_MEMORY_BACKEND=auto
TAU_MEMORY_EMBEDDING_PROVIDER=local
TAU_MEMORY_EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
TAU_MEMORY_EMBEDDING_API_BASE=
TAU_MEMORY_EMBEDDING_API_KEY=

# -----------------------------------------------------------------------------
# Credential store
# -----------------------------------------------------------------------------
TAU_CREDENTIAL_STORE=.tau/credentials.json
TAU_CREDENTIAL_STORE_ENCRYPTION=keyed
# Required when encryption mode is keyed.
TAU_CREDENTIAL_STORE_KEY=

# -----------------------------------------------------------------------------
# Gateway/OpenResponses
# -----------------------------------------------------------------------------
TAU_TRANSPORT_MODE=gateway
TAU_GATEWAY_OPENRESPONSES_SERVER=true
TAU_GATEWAY_OPENRESPONSES_BIND=127.0.0.1:8080
TAU_GATEWAY_OPENRESPONSES_AUTH_MODE=token
TAU_GATEWAY_OPENRESPONSES_AUTH_TOKEN=
TAU_GATEWAY_OPENRESPONSES_RATE_LIMIT_WINDOW_SECONDS=60
TAU_GATEWAY_OPENRESPONSES_RATE_LIMIT_MAX_REQUESTS=120

# -----------------------------------------------------------------------------
# Multi-channel adapters (set only for enabled transports)
# -----------------------------------------------------------------------------
TAU_SLACK_APP_TOKEN=
TAU_SLACK_BOT_TOKEN=
TAU_TELEGRAM_BOT_TOKEN=
TAU_DISCORD_BOT_TOKEN=
TAU_WHATSAPP_ACCESS_TOKEN=
TAU_WHATSAPP_PHONE_NUMBER_ID=

# -----------------------------------------------------------------------------
# Log rotation
# -----------------------------------------------------------------------------
TAU_LOG_ROTATION_MAX_BYTES=2097152
TAU_LOG_ROTATION_MAX_FILES=3
